<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/antique_white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/quest"
        android:layout_width="382dp"
        android:layout_height="205dp"
        android:text="TextView"
        android:textSize="28sp"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:background="@drawable/math_activity_border"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.19" />

    <EditText
        android:id="@+id/wtireAns"
        android:layout_width="360dp"
        android:layout_height="95dp"
        android:ems="10"
        android:hint="Введите ответ"
        android:textColor="@color/black"
        android:textSize="26sp"
        android:inputType="text"
        android:textAlignment="center"
        android:background="@drawable/math_activity_border"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/quest"
        app:layout_constraintVertical_bias="0.106" />

    <TextView
        android:id="@+id/ansRes"
        android:layout_width="299dp"
        android:layout_height="73dp"
        android:text="Здесь будет укано правильно ли вы ответили на вопрос"
        android:textSize="20sp"
        android:textColor="@color/black"

        app:layout_constraintBottom_toTopOf="@+id/quest"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.235" />

</androidx.constraintlayout.widget.ConstraintLayout>