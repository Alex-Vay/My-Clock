<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/quest"
        android:layout_width="342dp"
        android:layout_height="201dp"
        android:text="TextView"
        android:textColor="@color/black"
        android:textSize="26sp"
        android:textAlignment="center"
        android:background="@drawable/riddles_border"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.137" />

    <Button
        android:id="@+id/ans1"
        android:layout_width="315dp"
        android:layout_height="101dp"
        android:layout_marginTop="28dp"
        android:text="Button"
        android:textSize="@dimen/big_text_size"
        android:background="@drawable/activity_button_border"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/quest" />

    <Button
        android:id="@+id/ans2"
        android:layout_width="315dp"
        android:layout_height="101dp"
        android:layout_marginTop="@dimen/small_margin"
        android:text="Button"
        android:textSize="@dimen/big_text_size"
        android:background="@drawable/activity_button_border"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ans4" />

    <Button
        android:id="@+id/ans3"
        android:layout_width="315dp"
        android:layout_height="101dp"
        android:layout_marginTop="@dimen/small_margin"
        android:text="Button"
        android:textSize="@dimen/big_text_size"
        android:background="@drawable/activity_button_border"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ans1" />

    <Button
        android:id="@+id/ans4"
        android:layout_width="315dp"
        android:layout_height="101dp"
        android:layout_marginTop="@dimen/small_margin"
        android:text="Button"
        android:textSize="@dimen/big_text_size"
        android:background="@drawable/activity_button_border"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ans3" />

    <TextView
        android:id="@+id/ansRes"
        android:layout_width="310dp"
        android:layout_height="47dp"
        android:text="Здесь вы узнаете правильно ли ответили на вопрос"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="@dimen/big_text_size"
        app:layout_constraintBottom_toTopOf="@+id/quest"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>